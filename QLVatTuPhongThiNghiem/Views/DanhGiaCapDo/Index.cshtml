@model IEnumerable<QLVatTuPhongThiNghiem.Models.ViewModels.DanhGiaCapDoViewModel>
@{
    ViewData["Title"] = "Đánh giá cấp độ thiết bị";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Đánh giá cấp độ thiết bị</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">Đánh giá cấp độ</li>
                        <li class="breadcrumb-item active">Danh sách</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Danh sách đánh giá cấp độ</h5>
                        <div class="card-header-right">
                            <a href="@Url.Action("Create", "DanhGiaCapDo")" class="btn btn-primary">
                                <i data-feather="plus"></i> Thêm đánh giá
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã đánh giá</th>
                                        <th>Thiết bị</th>
                                        <th>Cấp độ</th>
                                        <th>Ngày đánh giá</th>
                                        <th>Người đánh giá</th>
                                        <th>Ghi chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model?.Any() == true)
                                    {
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.MaDanhGia</td>
                                                <td>@item.TenThietBi</td>
                                                <td>
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= item.CapDo)
                                                        {
                                                            <i class="fa fa-star text-warning"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="fa fa-star-o text-muted"></i>
                                                        }
                                                    }
                                                    <span class="badge badge-@(item.CapDo >= 4 ? "success" : item.CapDo >= 3 ? "warning" : "danger")">
                                                        @item.CapDo/5
                                                    </span>
                                                </td>
                                                <td>@item.NgayDanhGia.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>@item.TenNguoiDanhGia</td>
                                                <td>@item.GhiChu</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-center">Chưa có đánh giá nào</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        feather.replace();
    });
</script>
