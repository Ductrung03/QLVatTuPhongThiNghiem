@model QLVatTuPhongThiNghiem.Models.ViewModels.LichThucHanhViewModel
@{
    ViewData["Title"] = "Đăng ký lịch thực hành";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Đăng ký lịch thực hành</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "LichThucHanh")">Lịch thực hành</a></li>
                        <li class="breadcrumb-item active">Đăng ký</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Thông tin lịch thực hành</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ThoiGianBD" class="control-label"></label>
                                        <input asp-for="ThoiGianBD" class="form-control" type="datetime-local" />
                                        <span asp-validation-for="ThoiGianBD" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ThoiGianKT" class="control-label"></label>
                                        <input asp-for="ThoiGianKT" class="form-control" type="datetime-local" />
                                        <span asp-validation-for="ThoiGianKT" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="alert alert-info">
                                <h6><i data-feather="info"></i> Lưu ý:</h6>
                                <ul class="mb-0">
                                    <li>Thời gian thực hành tối thiểu là 1 giờ</li>
                                    <li>Thời gian bắt đầu phải sau thời điểm hiện tại</li>
                                    <li>Không được trùng với lịch đã đăng ký trước đó</li>
                                </ul>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i data-feather="save"></i> Đăng ký
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i data-feather="x"></i> Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        feather.replace();

        // Set minimum datetime to current time
        var now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        document.getElementById('ThoiGianBD').min = now.toISOString().slice(0, 16);
        document.getElementById('ThoiGianKT').min = now.toISOString().slice(0, 16);

        // Auto set end time when start time changes
        $('#ThoiGianBD').change(function() {
            var startTime = new Date(this.value);
            startTime.setHours(startTime.getHours() + 2); // Default 2 hours duration

            var endTimeString = startTime.toISOString().slice(0, 16);
            $('#ThoiGianKT').val(endTimeString);
        });
    });
</script>
